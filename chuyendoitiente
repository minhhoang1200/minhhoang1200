// Hàm chuyển đổi tiền tệ từ USD sang VNĐ
FUNCTION convertUSDToVND(amountInUSD, exchangeRate):
    // Tính số tiền sau khi chuyển đổi
    amountInVND = amountInUSD * exchangeRate
    RETURN amountInVND
END FUNCTION

// Hàm chính
FUNCTION main():
    // Nhập số tiền cần chuyển đổi (USD)
    PRINT "Nhập số tiền (USD): "
    amountInUSD = INPUT

    // Nhập tỷ giá hối đoái (1 USD = ? VNĐ)
    PRINT "Nhập tỷ giá hối đoái (1 USD = ? VNĐ): "
    exchangeRate = INPUT

    // Gọi hàm chuyển đổi
    amountInVND = convertUSDToVND(amountInUSD, exchangeRate)

    // Hiển thị kết quả
    PRINT amountInUSD, " USD = ", amountInVND, " VNĐ"
END FUNCTION

// Gọi hàm main để thực thi chương trình
main()
